<div class="tweet-wrapper">
  <div class="page-header bs-override">
    <% if @tweets.count > 0 %>
      <img class="pretty-border" src="<%= @tweets.first.user.profile_image_url %>" />
      <h2 style="display:inline"> <%= @tweets.first.user.screen_name %> </h2>
    <% end %>
  </div>
  <ul class="list-group">
  <% @tweets.each do |tweet| %>
    <li class="list-group-item">
      <span class="badge has-tooltip" data-container="body" data-toggle="tooltip" title="Retweets">
        <%= tweet.retweet_count %>
      </span>
      <span class="badge has-tooltip" data-container="body" data-toggle="tooltip" title="Favorites">
        <%= tweet.favorite_count %>
      </span>
      <%= tweet.text %>
    </li>
  <% end %>
  </ul>
</div>